@model MindSprings_.NET_Developer_Test.Models.TranslationModel

<h2>Convert to L33tsp34k</h2>

<form asp-action="ConvertToLeet" method="post">
    <div>
        <label asp-for="InputText">Enter Text:</label>
        <input asp-for="InputText" />
        <span asp-validation-for="InputText" class="text-danger"></span>
    </div>
    <button type="submit">Convert</button>
</form>

@if (!string.IsNullOrEmpty(Model.TranslatedText))
{
    <div>
        <h3>Converted Text:</h3>
        <p>@Model.TranslatedText</p>
    </div>
}
